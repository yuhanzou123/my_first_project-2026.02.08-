{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++23",//默认使用c++23标准
                "${file}",
                "-o",
                "C:\\c++\\.vscode\\runner.exe"//指定编译输出的可执行文件的文件名和存储位置，避免中文目录或中文文件名导致的编译错误
            ],
            "options": {
                "cwd": "C:\\mingw64\\bin\\",
                "env": {//为避免windows用户名为中文而导致的编译出错，增加一下环境变量
				"TMP": "C:\\c++\\temp",//可以根据需要修改目录，但要确保不出现中文和空格
                    "TEMP": "C:\\c++\\temp"//可以根据需要修改目录，但要确保不出现中文和空格
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]   
}